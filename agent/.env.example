# LiveKit Agent Environment Variables
# Copy this file to .env.local and fill in your values

# LiveKit Cloud Credentials
# Sign up at: https://cloud.livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# Groq API Key (FREE LLM - https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Deepgram API Key (FREE STT/TTS - https://console.deepgram.com/)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI API Key (Optional - if using OpenAI instead of Groq)
OPENAI_API_KEY=your_openai_api_key_here

# Backend API URL
BACKEND_API_URL=http://localhost:3001

# Default location for weather
DEFAULT_LOCATION=Mumbai
