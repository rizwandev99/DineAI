# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/dineai
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/dineai
MONGODB_URI=mongodb://localhost:27017/dineai

# OpenWeatherMap API Key
# Sign up at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Default location for weather (can be overridden in API calls)
DEFAULT_LOCATION=Mumbai
